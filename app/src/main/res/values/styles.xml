<?xml version="1.0" encoding="utf-8"?>

<resources>
    <!-- Estilo para el TextInputLayout -->
    <style name="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Custom" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Solo mostrar la línea inferior por defecto -->
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxStrokeColor">?attr/colorPrimary</item>
    </style>

    <style name="CustomDatePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <!-- Cambia el color de fondo del calendario -->
        <item name="android:background">#FFFFFF</item> <!-- Cambia esto al color deseado -->
    </style>


    <!-- Estilo para el menú emergente -->
    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>

    </style>
    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColor">@color/light_blue</item>
        <item name="colorControlNormal">@color/light_blue</item>
        <item name="colorPrimaryVariant">@color/design_default_color_on_primary</item>
        <item name="colorOnPrimary">@color/blue</item>
    </style>
    <style name="CustomSpinnerDropdown" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:background">@drawable/custom_spinner_background</item>
    </style>
    <!-- Estilo para el desplegable del Spinner -->
    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:popupBackground">@drawable/custom_spinner_background</item> <!-- Fondo del dropdown -->
    </style>
    <style name="CustomSpinnerItemStyle">
        <item name="android:textColor">#000000</item> <!-- Color de texto negro -->
        <item name="android:background">#FFFFFF</item> <!-- Fondo blanco -->
    </style>

    <string-array name="RUTAS">
        <item name="1">AMG - Area metropolitana de guadalajara</item>
        <item name="1">Fuera AMG - Fuera del area metropolitana</item>
    </string-array>


</resources>
